{
  "name": "gitscope",
  "displayName": "GitScope",
  "description": "AI-Powered Git Workflow Optimization Tool",
  "version": "1.3.1",
  "publisher": "tomacato",
  "icon": "GitScopeIcon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/2un-light/gitscope-extension.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
       {
        "command": "gitScope.showGitScopeNavigator",
        "title": "%command.showNavigator%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.startGitScope",
        "title": "%command.welcome%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.selectGeminiModel",
        "title": "%command.selectGeminiModel%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.configGeminiAPIKey",
        "title": "%command.configApiKey%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeCloneCommand",
        "title": "%command.clone%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executePullCommand",
        "title": "%command.pull%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeCreateBranchCommand",
        "title": "%command.createBranch%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeCheckoutBranchCommand",
        "title": "%command.checkoutBranch%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeStageAllCommand",
        "title": "%command.stageAll%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.generateMessage",
        "title": "%command.generateCommit%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeCommitCommand",
        "title": "%command.commit%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeMergeCommand",
        "title": "%command.merge%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executePushCommand",
        "title": "%command.push%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.executeDeleteLocalBranchCommand",
        "title": "%command.deleteBranch%",
        "category": "GitScope"
      },
      {
        "command": "gitScope.createTagAndPushCommand",
        "title": "%command.createTag%",
        "category": "GitScope"
      }
    ],
    "configuration": {
      "title": "GitScope",
      "properties": {
        "gitScope.language": {
          "type": "string",
          "enum": ["auto", "ko", "en"],
          "default": "auto",
          "description": "GitScope Interface Language"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "@vscode/l10n-dev": "^0.0.35",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "inquirer": "^12.11.0",
    "readline": "^1.3.0",
    "simple-git": "^3.30.0"
  },
  "files": [
    "images",
    "out/**/*",
    "src/webview-ui/**/*",
    "GitScopeIcon.png",
    "README.md"
  ]
}
